---
// Header component for Surprise Christmas Lights
// Clean, responsive design with mobile-first approach
---

<header class="header">
  <div class="header-container">
    <!-- Logo with circular white background -->
    <a href="/" class="logo-wrapper">
      <div class="logo-circle">
        <img src="/logo.png" alt="Surprise Christmas Lights" class="logo-image" />
      </div>
    </a>

    <!-- CTA Section - Phone + Button -->
    <div class="header-cta">
      <!-- Hours Text -->
      <div class="hours-text">Open 8am-6pm every day</div>

      <!-- Phone Link - Hidden on mobile, visible on tablet+ -->
      <a href="tel:6029102007" class="phone-link">
        <svg class="phone-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
        </svg>
        <span class="phone-number">(602) 910-2007</span>
      </a>

      <!-- Reserve Your Spot Button - Always visible -->
      <a href="#quote" class="cta-button">Reserve Your Spot</a>
    </div>
  </div>
</header>

<style>
  /* ===================================
     MOBILE-FIRST BASE STYLES
     =================================== */

  /* Header Container - Sticky position */
  .header {
    position: sticky;
    top: 0;
    z-index: 1000;
    background: #FFFFFF;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .header-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0.5rem 0.75rem 0.5rem 6.75rem; /* Extra left padding for logo, reduced right padding */
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
    position: relative;
  }

  /* ===================================
     LOGO WITH CIRCULAR BACKGROUND
     =================================== */
  .logo-wrapper {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    z-index: 1100;
    text-decoration: none;
  }

  .logo-circle {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: #FFFFFF;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    transform: translateY(14px); /* Extends down into hero section */
  }

  .logo-image {
    width: 88px;
    height: 88px;
    object-fit: contain;
  }

  /* ===================================
     HOURS TEXT
     =================================== */
  .hours-text {
    font-family: Georgia, 'Times New Roman', serif;
    font-size: 0.8125rem;
    color: #16A34A;
    font-weight: 600;
    font-style: italic;
    letter-spacing: 0.01em;
    line-height: 1.2;
    max-width: 6.5rem; /* Force wrapping on mobile */
  }

  /* ===================================
     HEADER CTA SECTION
     Phone link + Reserve Your Spot button
     =================================== */
  .header-cta {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-shrink: 0;
    margin-left: auto;
  }

  /* Phone Link - Hidden on mobile */
  .phone-link {
    display: none; /* Hidden on mobile, shown on tablet+ */
    align-items: center;
    gap: 0.5rem;
    color: #111827;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s ease;
    white-space: nowrap;
  }

  .phone-link:hover {
    color: #DC2626;
  }

  .phone-icon {
    width: 28px;
    height: 28px;
    flex-shrink: 0;
  }

  .phone-number {
    font-size: 1.375rem; /* 22px */
  }

  /* CTA Button - Always visible */
  .cta-button {
    background: #DC2626;
    color: #FFFFFF;
    padding: 0.5rem 0.75rem; /* 8px 12px - reduced for mobile */
    border-radius: 0.5rem; /* 8px */
    text-decoration: none;
    font-weight: 600;
    font-size: 1.125rem; /* 18px - reduced for mobile */
    transition: background 0.2s ease;
    white-space: nowrap;
    box-shadow: 0 2px 8px rgba(220, 38, 38, 0.3);
  }

  .cta-button:hover {
    background: #B91C1C;
  }

  /* ===================================
     RESPONSIVE BREAKPOINTS
     Mobile-First Strategy
     =================================== */

  /*
     TABLET: 768px - 1023px
     Show: Brand + Nav Links + Phone + Button
     Layout: Everything fits on one line with moderate spacing
  */
  @media (min-width: 768px) {
    .header-container {
      padding: 0.5rem 1.5rem 0.5rem 9rem; /* Extra left padding for larger logo */
      gap: 1.5rem;
    }

    .logo-wrapper {
      left: 1.5rem;
    }

    .logo-circle {
      width: 115px;
      height: 115px;
      transform: translateY(16px);
    }

    .logo-image {
      width: 102px;
      height: 102px;
    }

    /* Adjust sizing */
    .hours-text {
      font-size: 0.9375rem;
      max-width: none; /* Remove wrap constraint */
      white-space: nowrap; /* Single line on tablet+ */
    }

    /* Show phone link */
    .phone-link {
      display: flex;
    }

    .cta-button {
      padding: 0.625rem 1.25rem; /* 10px 20px */
      font-size: 1.25rem; /* 20px */
    }
  }

  /*
     DESKTOP: 1024px+
     Show: Brand + Nav Links + Phone + Button
     Layout: Generous spacing, larger font sizes
  */
  @media (min-width: 1024px) {
    .header-container {
      padding: 0.75rem 2rem 0.75rem 11.5rem; /* Extra left padding for larger logo */
      gap: 2rem;
    }

    .logo-wrapper {
      left: 2rem;
    }

    .logo-circle {
      width: 150px;
      height: 150px;
      transform: translateY(22px);
    }

    .logo-image {
      width: 134px;
      height: 134px;
    }

    .hours-text {
      font-size: 1.0625rem;
    }

    .header-cta {
      gap: 1.5rem;
    }

    .phone-number {
      font-size: 1.5rem; /* 24px */
    }

    .cta-button {
      font-size: 1.5rem; /* 24px */
      padding: 0.75rem 1.5rem; /* 12px 24px */
    }
  }

  /*
     LARGE DESKTOP: 1280px+
     Maximum spacing and optimal layout
  */
  @media (min-width: 1280px) {
    .header-container {
      padding-left: 12.5rem; /* Extra left padding for largest logo */
      gap: 2.5rem;
    }

    .hours-text {
      font-size: 1.125rem;
    }

    .logo-circle {
      width: 160px;
      height: 160px;
      transform: translateY(24px);
    }

    .logo-image {
      width: 144px;
      height: 144px;
    }

    .header-cta {
      gap: 2rem;
    }

    .phone-number {
      font-size: 1.625rem; /* 26px */
    }

    .cta-button {
      font-size: 1.625rem; /* 26px */
      padding: 0.875rem 1.75rem; /* 14px 28px */
    }
  }
</style>
