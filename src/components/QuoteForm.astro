---
// QuoteForm component for Surprise Christmas Lights
---

<section id="quote" class="quote-section">
  <div class="container">
    <div class="quote-header">
      <p class="section-label">Get Started</p>
      <h2 class="section-title">Get Your Free Quote Today</h2>
      <p class="section-subtitle">Request a Free Christmas Light Installation Quote</p>
      <p class="urgency-text">Limited spots available! Book now for the 2025 holiday season</p>
    </div>

    <div class="quote-content">
      <div class="form-container">
        <form class="quote-form" name="quote" method="POST" data-netlify="true" netlify-honeypot="bot-field">
          <input type="hidden" name="form-name" value="quote" />
          <p class="hidden">
            <label>
              Don't fill this out if you're human: <input name="bot-field" />
            </label>
          </p>

          <div class="form-group">
            <label for="name">Full Name *</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              placeholder="John Smith"
            />
          </div>

          <div class="form-group">
            <label for="email">Email Address *</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              placeholder="john@example.com"
            />
          </div>

          <div class="form-group">
            <label for="phone">Phone Number *</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              required
              placeholder="(602) 555-1234"
            />
          </div>

          <div class="form-group">
            <label for="service">Service Type *</label>
            <select id="service" name="service" required>
              <option value="">Select a service...</option>
              <option value="residential-rooflines">Residential - Rooflines</option>
              <option value="residential-full">Residential - Full Property</option>
              <option value="commercial">Commercial</option>
            </select>
          </div>

          <div class="form-group">
            <label for="message">Message / Additional Details</label>
            <textarea
              id="message"
              name="message"
              rows="5"
              placeholder="Tell us about your property and what you have in mind..."
            ></textarea>
          </div>

          <button type="submit" class="submit-button">
            Get Free Quote
          </button>
        </form>
      </div>

      <div class="contact-info-container">
        <div class="contact-info-box">
          <h3>Contact Us</h3>
          <p class="response-text">We respond to all inquiries within 24 hours!</p>

          <div class="contact-methods">
            <a href="tel:6022078848" class="contact-item">
              <div class="contact-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                </svg>
              </div>
              <div class="contact-details">
                <span class="contact-label">Call Us</span>
                <span class="contact-value">602-207-8848</span>
              </div>
            </a>

            <a href="mailto:surprisechristmaslights@gmail.com" class="contact-item">
              <div class="contact-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
              </div>
              <div class="contact-details">
                <span class="contact-label">Email Us</span>
                <span class="contact-value">surprisechristmaslights@gmail.com</span>
              </div>
            </a>
          </div>

          <div class="business-hours">
            <h4>Business Hours</h4>
            <p>Monday - Saturday: 8am - 6pm</p>
            <p>Sunday: By appointment</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .quote-section {
    background: linear-gradient(to bottom, #F3F4F6 0%, #E5E7EB 100%);
    padding: 5rem 0;
  }

  .quote-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-label {
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--color-red);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.5rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--color-dark);
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .section-subtitle {
    font-size: 1.25rem;
    color: var(--color-gray);
    margin-bottom: 1rem;
  }

  .urgency-text {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-red);
    background: var(--color-white);
    display: inline-block;
    padding: 0.5rem 1.5rem;
    border-radius: 2rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .quote-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .form-container {
    background: var(--color-white);
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .quote-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .hidden {
    display: none;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-dark);
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 0.875rem 1rem;
    border: 2px solid var(--color-gray-light);
    border-radius: 0.5rem;
    font-size: 1rem;
    font-family: inherit;
    color: var(--color-dark);
    background: var(--color-white);
    transition: all 0.2s ease;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-red);
    box-shadow: 0 0 0 3px rgba(220, 38, 38, 0.1);
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: var(--color-gray);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .form-group select {
    cursor: pointer;
  }

  .submit-button {
    background: var(--color-red);
    color: var(--color-white);
    padding: 1rem 2.5rem;
    border: none;
    border-radius: 0.5rem;
    font-size: 1.125rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.2s ease;
    box-shadow: 0 4px 14px rgba(220, 38, 38, 0.4);
  }

  .submit-button:hover {
    background: var(--color-red-dark);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(220, 38, 38, 0.5);
  }

  .submit-button:active {
    transform: translateY(0);
  }

  .contact-info-container {
    display: flex;
    flex-direction: column;
  }

  .contact-info-box {
    background: var(--color-white);
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    height: fit-content;
    position: sticky;
    top: 2rem;
  }

  .contact-info-box h3 {
    font-size: 1.5rem;
    color: var(--color-dark);
    margin-bottom: 0.75rem;
  }

  .response-text {
    font-size: 0.9375rem;
    color: var(--color-gray);
    margin-bottom: 2rem;
  }

  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .contact-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem;
    background: var(--color-light);
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .contact-item:hover {
    background: var(--color-gray-light);
    transform: translateX(4px);
  }

  .contact-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    background: var(--color-red);
    color: var(--color-white);
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .contact-icon svg {
    width: 24px;
    height: 24px;
  }

  .contact-details {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .contact-label {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-gray);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .contact-value {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-dark);
    word-break: break-word;
  }

  .business-hours {
    padding-top: 1.5rem;
    border-top: 2px solid var(--color-gray-light);
  }

  .business-hours h4 {
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-dark);
    margin-bottom: 0.5rem;
  }

  .business-hours p {
    font-size: 0.9375rem;
    color: var(--color-gray);
    margin-bottom: 0.25rem;
  }

  /* Tablet */
  @media (min-width: 768px) {
    .quote-section {
      padding: 6rem 0;
    }

    .section-title {
      font-size: 3rem;
    }

    .form-container {
      padding: 3rem;
    }

    .contact-info-box {
      padding: 2.5rem;
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .section-title {
      font-size: 3.5rem;
    }

    .quote-content {
      grid-template-columns: 1.5fr 1fr;
      gap: 3rem;
    }

    .contact-info-box {
      top: 2rem;
    }
  }
</style>
