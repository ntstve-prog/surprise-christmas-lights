</section>

<style>
  .service-packages {
    padding: 4rem 0;
    background: var(--color-white);
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 800;
    color: var(--color-dark);
    margin-bottom: 0.75rem;
  }

  .section-subtitle {
    font-size: 1.125rem;
    color: var(--color-gray);
    max-width: 600px;
    margin: 0 auto;
  }

  .packages-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .package-card {
    position: relative;
    background: var(--color-white);
    border: 2px solid var(--color-gray-light);
    border-radius: 1rem;
    padding: 2rem;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .package-card:hover {
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    transform: translateY(-8px);
  }

  .package-card.popular {
    border-color: var(--color-red);
    border-width: 3px;
  }

  .popular-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-red);
    color: var(--color-white);
    padding: 0.375rem 1rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.05em;
  }

  .package-icon {
    color: var(--color-green);
    margin-bottom: 1.5rem;
    display: flex;
    justify-content: center;
  }

  .package-card.popular .package-icon {
    color: var(--color-red);
  }

  .package-icon svg {
    width: 48px;
    height: 48px;
  }

  .package-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-dark);
    margin-bottom: 0.5rem;
    text-align: center;
  }

  .package-description {
    font-size: 1rem;
    color: var(--color-gray);
    text-align: center;
    margin-bottom: 2rem;
  }

  .package-features {
    list-style: none;
    margin-bottom: 2rem;
    flex-grow: 1;
  }

  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    margin-bottom: 1rem;
    font-size: 0.9375rem;
    color: var(--color-gray-dark);
  }

  .feature-item:last-child {
    margin-bottom: 0;
  }

  .check-icon {
    width: 20px;
    height: 20px;
    color: var(--color-green);
    flex-shrink: 0;
    margin-top: 0.125rem;
  }

  .package-button {
    display: inline-block;
    width: 100%;
    text-align: center;
    background: var(--color-red);
    color: var(--color-white);
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 700;
    font-size: 1.125rem;
    transition: all 0.2s ease;
    border: none;
    cursor: pointer;
  }

  .package-button:hover {
    background: var(--color-red-dark);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
  }

  .package-card.popular .package-button {
    background: var(--color-red);
    box-shadow: 0 4px 14px rgba(220, 38, 38, 0.3);
  }

  .package-card.popular .package-button:hover {
    background: var(--color-red-dark);
    box-shadow: 0 6px 20px rgba(220, 38, 38, 0.4);
  }

  /* Tablet: 2 columns */
  @media (min-width: 768px) {
    .service-packages {
      padding: 5rem 0;
    }

    .section-title {
      font-size: 2.5rem;
    }

    .section-subtitle {
      font-size: 1.25rem;
    }

    .packages-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2.5rem;
    }

    .package-card {
      padding: 2.5rem;
    }
  }

  /* Desktop: 3 columns */
  @media (min-width: 1024px) {
    .service-packages {
      padding: 6rem 0;
    }

    .section-title {
      font-size: 3rem;
    }

    .packages-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }

    .package-card {
      padding: 2rem 1.5rem;
    }

    .package-title {
      font-size: 1.375rem;
    }

    .package-description {
      font-size: 0.9375rem;
    }
  }
</style>
