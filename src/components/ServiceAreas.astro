<style>
  .service-areas {
    padding: 3rem 0;
    background: var(--color-dark);
    position: relative;
    overflow: hidden;
  }

  /* Subtle background pattern */
  .service-areas::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image:
      radial-gradient(circle at 20% 50%, rgba(220, 38, 38, 0.03) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(22, 163, 74, 0.03) 0%, transparent 50%);
    pointer-events: none;
  }

  .container {
    position: relative;
    z-index: 1;
  }

  .section-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .section-title {
    font-size: 1.75rem;
    font-weight: 800;
    color: var(--color-white);
    margin-bottom: 0.5rem;
  }

  .section-subtitle {
    font-size: 1rem;
    color: var(--color-gray-light);
    max-width: 600px;
    margin: 0 auto;
  }

  .areas-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.75rem;
    margin-bottom: 2rem;
  }

  .area-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.5rem;
    padding: 1rem 0.75rem;
    text-align: center;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .area-card:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: var(--color-green);
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(22, 163, 74, 0.15);
  }

  .area-card.primary {
    background: linear-gradient(135deg, rgba(220, 38, 38, 0.15) 0%, rgba(22, 163, 74, 0.15) 100%);
    border: 2px solid var(--color-red);
  }

  .area-card.primary:hover {
    background: linear-gradient(135deg, rgba(220, 38, 38, 0.25) 0%, rgba(22, 163, 74, 0.25) 100%);
    border-color: var(--color-red);
    box-shadow: 0 8px 20px rgba(220, 38, 38, 0.25);
  }

  .area-icon {
    color: var(--color-green);
    margin-bottom: 0.5rem;
    display: flex;
    justify-content: center;
  }

  .area-card.primary .area-icon {
    color: var(--color-red);
  }

  .area-icon svg {
    width: 24px;
    height: 24px;
  }

  .area-name {
    font-size: 0.9rem;
    font-weight: 700;
    color: var(--color-white);
    margin-bottom: 0.25rem;
  }

  .area-description {
    font-size: 0.875rem;
    color: var(--color-red);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .service-cta {
    text-align: center;
    padding: 1.25rem 1.5rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 0.5rem;
    border: 1px dashed rgba(255, 255, 255, 0.2);
  }

  .cta-text {
    font-size: 1rem;
    color: var(--color-white);
    margin: 0;
  }

  .cta-link {
    color: var(--color-red);
    font-weight: 700;
    text-decoration: none;
    border-bottom: 2px solid var(--color-red);
    transition: all 0.2s ease;
  }

  .cta-link:hover {
    color: var(--color-white);
    border-bottom-color: var(--color-white);
  }

  /* Tablet: 3 columns */
  @media (min-width: 640px) {
    .areas-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 0.875rem;
    }

    .area-icon svg {
      width: 28px;
      height: 28px;
    }

    .area-name {
      font-size: 0.95rem;
    }
  }

  /* Tablet: 4 columns */
  @media (min-width: 768px) {
    .service-areas {
      padding: 3.5rem 0;
    }

    .section-title {
      font-size: 2rem;
    }

    .section-subtitle {
      font-size: 1.125rem;
    }

    .areas-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 1rem;
    }

    .area-card {
      padding: 1.25rem 1rem;
    }

    .area-icon svg {
      width: 28px;
      height: 28px;
    }
  }

  /* Desktop: 6 columns with compact spacing */
  @media (min-width: 1024px) {
    .service-areas {
      padding: 4rem 0;
    }

    .section-title {
      font-size: 2.25rem;
    }

    .areas-grid {
      grid-template-columns: repeat(6, 1fr);
      gap: 1rem;
    }

    .area-card {
      padding: 1.25rem 0.875rem;
    }

    .area-name {
      font-size: 1rem;
    }

    .cta-text {
      font-size: 1.125rem;
    }
  }
</style>
